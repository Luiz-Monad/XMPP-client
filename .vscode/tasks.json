{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "type": "shell",
      "command": "yarn start",
    },
    {
      "label": "client",
      "type": "shell",
      "command": "yarn client",
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "yarn compile",
      "problemMatcher": [
        "$ts-webpack",
        "$tslint-webpack",
      ],
    },
    {
      "label": "server",
      "type": "shell",
      "command": "yarn server",
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "yarn watch",
      "isBackground": true,
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch",
      ],
    },
    {
      "label": "webpack",
      "type": "shell",
      "command": "yarn webpack",
      "isBackground": true,
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch",
      ],
    },
  ]
}
