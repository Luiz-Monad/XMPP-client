@import '../_variables'
@import '../_mixins'

// Settings
.main

  h1
    color: #fff
    padding: 6px 12px
    margin: 0
    z-index: 101
    position: fixed

  > div
    padding: 20px
    border-bottom: 1px solid $gray-lighter
    h4
      color: $blue-saturated

    &:last-of-type
      border: none

    .status
      overflow: hidden
      min-height: 35px
      max-height: 50px
      height: auto

    .enableAlerts, .soundNotifs
      margin-right: 5px

    .soundNotifs
      &.primary
        &:before
          content: 'Disable '
      &.secondary
        &:before
          content: 'Enable '

.uploadRegion
  padding: 15px
  roundall(3px)
  margin: 50px 0
  border: 1px solid $gray-lighter
  background: lighten($gray-lighter, 80%)

  p
    margin: 0

  img
    margin: 10px 0

.disconnect, .logout
  margin-right: 5px
