{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./src/js",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": "./src/js",
    "paths": {
      "parselinks": [
        "libraries/parselinks.js"
      ],
      "resampler": [
        "libraries/resampler.js"
      ],
      "templates": [
        "templates.js"
      ],
    },
    "lib": [
      "es6",
      "dom",
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules/**",
  ]
}
